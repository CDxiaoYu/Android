<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="121dp"
        android:layout_height="177dp"
        android:layout_marginTop="170dp"

        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@+id/roll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/dice1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dice1" />

        <ImageView
            android:id="@+id/dice2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dice2" />

        <ImageView
            android:id="@+id/dice3"
            android:layout_width="60dp"
            android:layout_height="60dp"

            app:srcCompat="@drawable/dice4" />

        <ImageView
            android:id="@+id/dice4"
            android:layout_width="60dp"
            android:layout_height="60dp"

            app:srcCompat="@drawable/dice5" />

        <ImageView
            android:id="@+id/dice5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dice6" />

        <ImageView
            android:id="@+id/dice6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dice4" />

    </GridLayout>


    <Button
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="roll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/box"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginTop="224dp"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toTopOf="@+id/roll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:text="@string/open"
        app:layout_constraintStart_toStartOf="@+id/roll"
        app:layout_constraintTop_toBottomOf="@+id/roll"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

